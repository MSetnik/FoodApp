<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ContainerDishInf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="45dp">


        <TextView
            android:id="@+id/WishlistDishName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dish Name"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/WishlistDishDescription"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/WishlistDishPrice"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/WishlistDishPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dish price"
            android:textAlignment="viewEnd"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/WishlistDishDescription"
            app:layout_constraintLeft_toRightOf="@+id/WishlistDishName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/WishlistDishDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dish Description"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WishlistDishName" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@id/ContainerDishInf"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorButtonRemove">

        <Button
            android:id="@+id/ButtonDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/ContainerDishInf"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/btnremove"/>
    </FrameLayout>





</androidx.constraintlayout.widget.ConstraintLayout>